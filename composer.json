{
    "name": "mindbox/sdk",
    "description": "Mindbox SDK for PHP",
    "keywords": ["mindbox", "sdk"],
    "type": "library",
    "require": {
        "php": ">=8.0",
        "psr/log": "^3.0.0",
        "ext-json": "*",
        "ext-simplexml": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "mikey179/vfsstream": "*",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "suggest": {
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {"Mindbox\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"Mindbox\\Tests\\": "tests/"}
    }
}
